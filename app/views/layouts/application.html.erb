<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">

  <header class="shadow-sm">
   <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class="navbar-brand p-3" href="/"><h3>Bookers</h3></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
       <span class="navbar-toggler-icon"></span>
      </button>

     <div class="collapse navbar-collapse" id="navbarNavDropdown">
     <ul class="navbar-nav ml-auto">
     <% if user_signed_in? %>
       <li class="nav-item">
       <%= link_to user_path(current_user.id), method: :get do %>
       <p>Home</p>
       <% end %>
       </li>

       <li class="nav-item">
         <%= link_to users_path, method: :get do %>
         <p>Users</p>
         <% end %>
       </li>

       <li class="nav-item">
         <%= link_to books_path, method: :get do %>
         <p>Books</p>
         <% end %>
       </li>

       <li class="nav-item">
         <%= link_to destroy_user_session_path, method: :delete do %>
         <p>Log out</p>
         <% end %>
       </li>
     <% else %>
       <li class="nav-item">
         <%= link_to root_path, method: :get do %>
         <p>Home</p>
         <% end %>
       </li>
       <li class="nav-item">
         <%= link_to about_path, method: :get do %>
         <p>About</p>
         <% end %>
       </li>
       <li class="nav-item">
         <%= link_to new_user_registration_path, method: :get do %>
         <p>Sign up</p>
         <% end %>
       </li>
       <li class="nav-item">
         <%= link_to new_user_session_path, method: :get do %>
         <p>Log in</p>
         <% end %>
       </li>
     <% end %>
     </ul>
     </div>
    </div>
   </nav>
  </header>
  <% if flash[:notice] %>
      <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
    <% end %>
  <main class="mb-auto">
  <%= yield %>
  </main>
  </body>
</html>
